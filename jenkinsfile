pipeline {
    agent any

    stages {
        stage('SCM Checkout'){
          git 'https://github.com/prakashk0301/maven-project'
        }
  }
    {
        stage ('Compile Stage') {
            steps {
                withMaven(maven : 'LocalMAVEN') {
                    sh 'mvn clean compile'
                }
            }
        }
        stage ('Test Stage') {
           steps {
               withMaven(maven : 'LocalMAVEN') {
                    sh 'mvn clean test'
               }
           }
        }
        stage ('Package Stage') {
           steps {
               withMaven(maven : 'LocalMAVEN') {
                    sh 'mvn clean package'
               }
           }
        }
        stage ('Install Stage') {
           steps {
               withMaven(maven : 'LocalMAVEN') {
                    sh 'mvn clean install'
               }
           }
        }
        stage ('Deploy CI') {
           steps {
               sshagent (credentials: ['009335c5-246b-4ab6-adf0-0f04134b4416']) {
                    sh 'scp -o StrictHostKeyChecking=no /target/webapp/*.war ec2-user@18.216.250.64:/var/lib/tomcat/webapps'
}
}
}       
}
}
